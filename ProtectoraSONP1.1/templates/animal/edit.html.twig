{% extends 'base.html.twig' %}

{% block title %}Edit Animal{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/editar_animal.css') }}" type="text/css" rel="stylesheet"/>
    <!-- Caveat Regular 400 -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet"> 
    <!-- Nunito Sans -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200&display=swap" rel="stylesheet"> 
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Yanone+Kaffeesatz:wght@500&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h1>Edit Animal</h1>
                </div>
                <div class="card-body">
                    {{ include('animal/_form.html.twig', {'button_label': 'Update'}) }}
                    <div id="contenedor_botones">
                        <a class="btn btn-secondary" href="{{ path('animal_index') }}">Volver al listado</a>
                        {{ include('animal/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
